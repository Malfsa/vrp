<Window x:Class="WpfApp2.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты" Height="600" Width="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
    <Grid>
        <StackPanel>
            <TextBlock Text="Оптимальное значение:" FontWeight="Bold" Margin="10"/>
            <TextBox Text="{Binding OptimalValue}" Margin="10" IsReadOnly="True" TextWrapping="Wrap" />

            <TextBlock Text="Матрица маршрутов:" FontWeight="Bold" Margin="10"/>
            <ListBox ItemsSource="{Binding RouteMatrix}" Margin="10" Height="150"/>

            <TextBlock Text="Маршруты для каждого транспортного средства:" FontWeight="Bold" Margin="10"/>
            <ListBox ItemsSource="{Binding Routes}" Margin="10" Height="150"/>

            <TextBlock Text="Дистанция пройдённая каждым транспортным средством:" FontWeight="Bold" Margin="10"/>
            <ListBox ItemsSource="{Binding Distances}" Margin="10" Height="150"/>

            <Button Content="Закрыть" HorizontalAlignment="Center" Margin="10" Width="100" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
    </ScrollViewer>
</Window>